---
import Layout from "@/layouts/Layout.astro";
import BreadCrumb from "@/components/BreadCrumb.astro";
import ProblemForm from "@/components/forms/ProblemForm.astro";
---

<Layout title="New Problem" makeTile>
    <BreadCrumb
        entries={[
            ["Problems", "/problems"],
            ["New", "/problems/new"]
        ]}
    />
    <h1 class="text-2xl">New Problem</h1>
    <ProblemForm submitWord="Create" />
</Layout>
