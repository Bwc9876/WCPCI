---
import For from "@/components/tera/For.astro";
import Variable from "./tera/Variable.astro";

export interface Props {
    label: string;
    help?: string;
    isCheckbox?: boolean;
    class?: string;
    errorVar?: string;
}

const { label, help, errorVar, isCheckbox, class: className } = Astro.props;
---

<label class:list={["group flex flex-col gap-1", className ?? ""]}>
    <span class:list={["flex", isCheckbox ? "w-fit flex-row-reverse gap-1" : "flex-col"]}>
        <span class="text-lg">{label}</span>
        <slot />
    </span>
    {
        errorVar && (
            <ul class="hidden text-sm text-red-500 group-has-[:invalid]:block group-has-[[data-invalid=true]]:block">
                <For sourceList={errorVar} itemName="error">
                    <li class="capitalize">
                        <Variable expression="error" />
                    </li>
                </For>
            </ul>
        )
    }
    {help && <span class="text-sm text-gray-500">{help}</span>}
</label>
