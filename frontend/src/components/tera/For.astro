---
import Tag from "./Tag.astro";

export interface Props {
    itemName: string;
    sourceList: string;
    debugEval?: boolean;
    forceHide?: boolean;
}

const { itemName, debugEval = false, sourceList, forceHide } = Astro.props as Props;
---

<Tag forceHide={forceHide} expression={`for ${itemName} in ${sourceList}`} />
<slot />
{import.meta.env.DEV && debugEval && <slot name="debug" />}
<Tag forceHide={forceHide} expression="endfor" />
