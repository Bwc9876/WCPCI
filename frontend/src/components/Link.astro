---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"a"> {
    color?: string;
    isExternal?: boolean;
    class?: string;
}

const { isExternal, color, class: className, ...rest } = Astro.props;
---

<a
    class={`text-${color ?? "accent"} hover:text-accent ${className ?? ""}`}
    rel=`${isExternal ? "noreferrer" : undefined}`
    target=`${isExternal ? "_blank" : "_self"}`
    {...rest}
>
    <slot />
</a>
