---
import type { HTMLAttributes, HTMLTag } from "astro/types";

export type Props<T extends HTMLTag> = HTMLAttributes<T> & {
    as?: T;
};

const { as: Component = "div", class: className, ...rest } = Astro.props;
---

<Component class:list={["rounded-2xl bg-background-100 p-4", className ?? ""]} {...rest}>
    <slot />
</Component>
